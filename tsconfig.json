{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build/types",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true,
    "useUnknownInCatchVariables": false
  },
  "exclude": ["templates", "dist"]
}
